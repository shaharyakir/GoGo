<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sashapps.gogo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/GogoTheme" >
        <activity
            android:name="com.sashapps.gogo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sashapps.gogo.LoginToGogoActivity"
            android:label="@string/title_activity_login_to_gogo" >
            <intent-filter>
                <action android:name="com.sashapps.gogo.LoginToGogoActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sashapps.gogo.WhereToGoActivity"
            android:label="@string/title_activity_where_to_go" >
            <intent-filter>
                <action android:name="com.sashapps.gogo.WhereToGoActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sashapps.gogo.WhatToDoActivity"
            android:label="@string/title_activity_what_to_do" >
            <intent-filter>
                <action android:name="com.sashapps.gogo.WhatToDoActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
