<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/what_to_do_activity_layout"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".WhatToDoActivity">

    <TextView
        style="@style/Title.Small"
        android:text="@string/what_do_you_want_to_do_in"
        android:id="@+id/what_to_do_title"
        android:gravity="center"
        android:layout_below="@+id/nav_back"
        />

    <ImageView
        android:id="@+id/nav_back"
        android:src="@drawable/navigation_button"
        style="@style/NavigationButton"
        android:layout_marginTop="10sp"
        android:onClick="goBack"
        />

    <Button
        android:layout_below="@id/what_to_do_title"
        android:text="@string/hiking_trekking"
        style="@style/RoundCorneredView.Button"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="80dp"
        android:layout_centerHorizontal="true"
        android:onClick="loadActivities"
        />

</RelativeLayout>
