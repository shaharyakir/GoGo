<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/mainLayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff61b8ff"
    tools:context=".MainActivity">

     <TextView
        android:layout_centerHorizontal="true"
         android:text="@string/GogoTitle"
         android:textColor="@android:color/white"
         android:textStyle="bold"
         android:layout_marginTop="50sp"
         android:textSize="80sp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/textView">

     </TextView>

    <!--<ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/cloud"
        android:layout_below="@+id/subTitle"
        android:layout_alignLeft="@+id/btnLogin" />-->

    <TextView
        android:layout_centerHorizontal="true"
        android:text="@string/GogoSubTitle"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="30sp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:id="@+id/subTitle">
    </TextView>


    <Button
        android:id="@+id/btnLogin"
        android:layout_height="35sp"
        android:layout_width="200sp"
        android:text="@string/loginWithGogo"
        android:textColor="#ff6767ff"
        android:textSize="15sp"
        android:background="@drawable/round_button"
        android:onClick="onClickLogin"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView">

   </Button>

    <Button
        android:id="@+id/btnLoginWithFacebook"
        android:layout_height="35sp"
        android:layout_width="200sp"
        android:text="@string/loginWithFacebook"
        android:textColor="#ff6767ff"
        android:textSize="15sp"
        android:background="@drawable/round_button"
        android:onClick="onClickLogin"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnLogin"
        android:drawableLeft="@drawable/facebook_logo"
        >

    </Button>




</RelativeLayout>
